</sap.ui.layout.form:content>
  </sap.ui.layout.form:SimpleForm>   
</u:blocks>
            </u:ObjectPageSubSection>
            </u:subSections>
            </u:ObjectPageSection> 
</u:sections>
</u:ObjectPageLayout>
